<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <com.robertchou.module.ui.xml.CalculatorView
        android:id="@+id/cv_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gl_shift"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.45" />

    <GridLayout
        android:id="@+id/gl_shift"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:rowCount="5"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:useDefaultMargins="true"
        app:layout_constraintStart_toEndOf="@id/cv_left"
        app:layout_constraintEnd_toStartOf="@id/cv_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".7"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent="0.1" >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_shift_left"
            style="@style/CalculatorButtonStyle"
            android:theme="@style/ShiftButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:src="@drawable/arrow_left"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            />
      <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/btn_shift_right"
            style="@style/CalculatorButtonStyle"
            android:theme="@style/ShiftButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
          android:src="@drawable/arrow_right"
          android:scaleType="fitCenter"
          android:visibility="invisible"
            />
      <com.robertchou.module.ui.xml.AutoResizeButton
            style="@style/CalculatorButtonStyle"
            android:theme="@style/CalculatorButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:visibility="invisible"/>
      <com.robertchou.module.ui.xml.AutoResizeButton
            style="@style/CalculatorButtonStyle"
            android:theme="@style/CalculatorButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
          android:visibility="invisible"/>
      <com.robertchou.module.ui.xml.AutoResizeButton
            style="@style/CalculatorButtonStyle"
            android:theme="@style/FunctionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
          android:letterSpacing=".0025"
            android:text="@string/calculator_btn_del"
          android:visibility="invisible"/>
    </GridLayout>

    <com.robertchou.module.ui.xml.CalculatorView
        android:id="@+id/cv_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/gl_shift"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.45" />

</androidx.constraintlayout.widget.ConstraintLayout>
