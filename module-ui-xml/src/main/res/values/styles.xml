
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Calculator Button Style -->
    <style name="CalculatorButtonStyle">
        <item name="android:background">@drawable/button_background_ripple</item>
        <item name="buttonNormalStartColor">@color/button_normal_start</item>
        <item name="buttonNormalCenterColor">@color/button_normal_center</item>
        <item name="buttonNormalEndColor">@color/button_normal_end</item>
        <item name="buttonPressedStartColor">@color/button_pressed_start</item>
        <item name="buttonPressedCenterColor">@color/button_pressed_center</item>
        <item name="buttonPressedEndColor">@color/button_pressed_end</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Number Button Style -->
    <style name="NumberButtonStyle" parent="CalculatorButtonStyle">
        <item name="buttonNormalStartColor">@color/button_normal_start</item>
        <item name="buttonNormalCenterColor">@color/button_normal_center</item>
        <item name="buttonNormalEndColor">@color/button_normal_end</item>
        <item name="buttonPressedStartColor">@color/button_pressed_start</item>
        <item name="buttonPressedCenterColor">@color/button_pressed_center</item>
        <item name="buttonPressedEndColor">@color/button_pressed_end</item>
    </style>

    <!-- Operator Button Style -->
    <style name="OperatorButtonStyle" parent="CalculatorButtonStyle">
        <item name="buttonNormalStartColor">@color/operator_button_normal_start</item>
        <item name="buttonNormalCenterColor">@color/operator_button_normal_center</item>
        <item name="buttonNormalEndColor">@color/operator_button_normal_end</item>
        <item name="buttonPressedStartColor">@color/button_pressed_start</item>
        <item name="buttonPressedCenterColor">@color/button_pressed_center</item>
        <item name="buttonPressedEndColor">@color/button_pressed_end</item>
    </style>

    <!-- Operator Button Style -->
    <style name="FunctionButtonStyle" parent="CalculatorButtonStyle">
        <item name="buttonNormalStartColor">@color/function_button_normal_start</item>
        <item name="buttonNormalCenterColor">@color/function_button_normal_center</item>
        <item name="buttonNormalEndColor">@color/function_button_normal_end</item>
        <item name="buttonPressedStartColor">@color/button_pressed_start</item>
        <item name="buttonPressedCenterColor">@color/button_pressed_center</item>
        <item name="buttonPressedEndColor">@color/button_pressed_end</item>
    </style>

    <!-- Operator Button Style -->
    <style name="ShiftButtonStyle" parent="CalculatorButtonStyle">
        <item name="buttonNormalStartColor">@color/shift_button_normal_start</item>
        <item name="buttonNormalCenterColor">@color/shift_button_normal_center</item>
        <item name="buttonNormalEndColor">@color/shift_button_normal_end</item>
    </style>

</resources>